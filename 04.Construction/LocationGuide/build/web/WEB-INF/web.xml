<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>UrlRewriteFilter</filter-name>
        <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UrlRewriteFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>com.elcom.omap.administrator.AddUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OmapMain</servlet-name>
        <servlet-class>com.elcom.omap.OmapMain</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>AdministratorServices</servlet-name>
        <servlet-class>com.elcom.omap.administrator.AdministratorServices</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PageServices</servlet-name>
        <servlet-class>com.elcom.omap.administrator.PageServices</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RoleServices</servlet-name>
        <servlet-class>com.elcom.omap.administrator.RoleServices</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServices</servlet-name>
        <servlet-class>com.elcom.omap.login.LoginServices</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OmapUploadFileServices</servlet-name>
        <servlet-class>com.elcom.omap.services.OmapUploadFileServices</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuanTriHeThongServices</servlet-name>
        <servlet-class>com.elcom.omap.quantrihethong.QuanTriHeThongServices</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BaoCaoThongKeServices</servlet-name>
        <servlet-class>com.elcom.omap.baocaothongke.BaoCaoThongKeServices</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>EditUserServices</servlet-name>
        <servlet-class>com.elcom.omap.services.EditUserServices</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PermissionServices</servlet-name>
        <servlet-class>com.elcom.omap.services.PermissionServices</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/AddUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OmapMain</servlet-name>
        <url-pattern>/OmapMain</url-pattern>
        <load-on-startup>0</load-on-startup>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdministratorServices</servlet-name>
        <url-pattern>/AdministratorServices</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PageServices</servlet-name>
        <url-pattern>/PageServices</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RoleServices</servlet-name>
        <url-pattern>/RoleServices</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServices</servlet-name>
        <url-pattern>/LoginServices</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuanTriHeThongServices</servlet-name>
        <url-pattern>/QuanTriHeThongServices</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditUserServices</servlet-name>
        <url-pattern>/EditUserServices</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PermissionServices</servlet-name>
        <url-pattern>/PermissionServices</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
